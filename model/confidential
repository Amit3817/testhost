const mongoose=require('mongoose');

const schema=mongoose.Schema;

const confidentialSchema=new schema({
    user: {
        type: schema.Types.ObjectId,
        ref: 'user',
        required:true,
        unique:true
      },

    aadhar:{
        type:String,
        required:true
    },
    pan:{
        type:String,
        required:true
    },
  dob:{
        type:String,
        required:true
    }


});

module.exports=mongoose.model("confidential",confidentialSchema);